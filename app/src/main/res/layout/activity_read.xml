<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.bjtu.recitewords.discover.lrc.LrcView
        android:id="@+id/lrc_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:lrcAnimationDuration="1000"
        app:lrcCurrentTextColor="#465CD6"
        app:lrcDividerHeight="20dp"
        app:lrcLabel="找不到歌词(@_@)"
        app:lrcNormalTextColor="@color/colorGrey"
        app:lrcNormalTextSize="15sp"
        app:lrcPadding="16dp"
        app:lrcTextGravity="center"
        app:lrcTextSize="15sp"
        app:lrcTimeTextColor="@color/colorGrey"
        app:lrcTimelineColor="@color/colorGrey"
        app:lrcTimelineTextColor="@color/colorGrey" />

    <SeekBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:17"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="02:01"
            android:textAlignment="textEnd"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/bt_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="22dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_mmenu" />

        <ImageView

            android:id="@+id/bt_last"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="65dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_mlast" />

        <ImageView
            android:id="@+id/bt_play_pause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_mplay" />

        <ImageView

            android:id="@+id/bt_next"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="65dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_mnext" />

        <ImageView
            android:id="@+id/bt_shrink"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginRight="22dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_mshrink" />

    </LinearLayout>
</LinearLayout>
