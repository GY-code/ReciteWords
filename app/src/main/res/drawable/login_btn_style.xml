<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <solid android:color="@color/primary_color" />
    <!--设置渐变-->
    <gradient
        android:startColor="@color/gradient_color1"
        android:endColor="@color/gradient_color2"
        android:angle="0"/>
    <!--angle控制渐变的方向-->

    <corners
        android:radius="7dp"/>

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp"
        />
</shape>

